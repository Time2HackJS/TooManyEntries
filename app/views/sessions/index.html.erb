<br/><br/><br/>
<div class="row justify-content-center text-center">
  <div class="col-12 head"><%= image_tag("tme.png") %></div>
  <% if notice %>
    <div id="notice" class="alert alert-info"><%= notice %></div>
  <% end %>
  <% if current_user %>
    <div><%= t('.logas') %><%= current_user.name %></div>
    <br />
    <%= link_to(t('.logout'), { controller: 'sessions', action: 'logout'}, class: 'btn btn-primary') %>
  <% else %>
    <%= form_tag('/auth', method: 'post') do %>
      <% if flash[:alert] %>
        <div id="danger" class="alert alert-danger"><%= flash[:alert] %></div>
        <br />
      <% end %>
      <br/>
      <%= label_tag(:name, t('.name'), class: 'site-dark-text') %>
      <%= text_field_tag(:name, '', class: 'form-control') %>
      <br />
      <%= label_tag(:password, t('.password'), class: 'site-dark-text') %>
      <%= password_field_tag(:password, '', class: 'form-control') %>
      <br />
      <%= submit_tag(t('.signin'), class: 'btn btn-primary') %>
      <%= link_to(t('.signup'), { controller: 'users', action: 'new' }, class: 'btn btn-outline-primary') %>
    <% end %>
  <% end %>
</div>